<!-- START SNIPPET: visitorValidatorsExample -->

<validators>
	<field name="user">
		<field-validator type="visitor">
			<param name="context">userContext</param>
			<param name="appendPrefix">true</param>
			<message>User:</message>
		</field-validator>
	</field>
</validators>

